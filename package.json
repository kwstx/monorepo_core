{
    "name": "agent-infra-monorepo",
    "version": "1.0.0",
    "description": "Monorepo for agent infrastructure modules",
    "private": true,
    "scripts": {
        "install:all": "npm install && npx lerna bootstrap",
        "test:all": "npm test --workspaces",
        "build:all": "npm run build --workspaces"
    },
    "workspaces": [
        "packages/a2a_coordination",
        "packages/actionable_logic",
        "packages/economic_autonomy",
        "packages/enforcement_layer",
        "packages/identity_system",
        "packages/scorring_module",
        "packages/self_improvement_governance",
        "packages/shared_utils",
        "packages/simulation_layer",
        "packages/task_formation"
    ],
    "dependencies": {
        "express": "^5.2.1",
        "uuid": "^13.0.0",
        "cors": "^2.8.6",
        "body-parser": "^2.2.2"
    },
    "devDependencies": {
        "typescript": "^5.9.3",
        "ts-node": "^10.9.2",
        "tsx": "^4.19.2",
        "@types/node": "^25.3.0",
        "@types/express": "^5.0.6",
        "@types/uuid": "^10.0.0",
        "@types/cors": "^2.8.19",
        "@types/body-parser": "^1.19.6"
    }
}