{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "NodeNext",
    "baseUrl": ".",
    "paths": {
      "@shared/*": [
        "../shared_utils/src/*"
      ]
    }
  },
  "include": [
    "src/**/*",
    "../shared_utils/src/**/*"
  ]
}