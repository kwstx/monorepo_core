{
    "compilerOptions": {
        "target": "ESNext",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist",
        "baseUrl": ".",
        "paths": {
            "@shared/*": [
                "../shared_utils/src/*"
            ]
        }
    },
    "include": [
        "src/**/*",
        "../shared_utils/src/**/*"
    ]
}